const translations = {
  en: {
    welcome: 'Welcome Back',
    desc: 'Sign in to continue to your textile dashboard',
    email: 'Email Address',
    password: 'Password',
    signin: 'Sign In',
    noAccount: 'Don‚Äôt have an account?',
    register: 'Register',
  },
  ta: {
    welcome: '‡ÆÆ‡ØÄ‡Æ£‡Øç‡Æü‡ØÅ‡ÆÆ‡Øç ‡Æµ‡Æ∞‡Æµ‡Øá‡Æ±‡Øç‡Æï‡Æø‡Æ±‡Øã‡ÆÆ‡Øç',
    desc: '‡Æâ‡Æô‡Øç‡Æï‡Æ≥‡Øç ‡Æ§‡ØÅ‡Æ£‡Æø‡Æï‡Øç‡Æï‡Æü‡Øà‡Æï‡Øç ‡Æï‡Æ£‡Æï‡Øç‡Æï‡Æø‡Æ≤‡Øç ‡Æ®‡ØÅ‡Æ¥‡Øà‡ÆØ‡Æµ‡ØÅ‡ÆÆ‡Øç',
    email: '‡ÆÆ‡Æø‡Æ©‡Øç‡Æ©‡Æû‡Øç‡Æö‡Æ≤‡Øç ‡ÆÆ‡ØÅ‡Æï‡Æµ‡Æ∞‡Æø',
    password: '‡Æï‡Æü‡Æµ‡ØÅ‡Æö‡Øç‡Æö‡Øä‡Æ≤‡Øç',
    signin: '‡Æâ‡Æ≥‡Øç‡Æ®‡ØÅ‡Æ¥‡Øà‡Æï',
    noAccount: '‡Æï‡Æ£‡Æï‡Øç‡Æï‡ØÅ ‡Æá‡Æ≤‡Øç‡Æ≤‡Øà‡ÆØ‡Ææ?',
    register: '‡Æ™‡Æ§‡Æø‡Æµ‡ØÅ ‡Æö‡ØÜ‡ÆØ‡Øç‡Æï',
  },
};

